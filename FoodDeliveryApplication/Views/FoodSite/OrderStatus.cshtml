<div class="d-flex justify-content-between">
    <h2 class="text-success">
        OrderStatus
    </h2>
    <table>
        
        <tr><td><p style="font-size:15px">@Html.ActionLink("Log Out","Login")</p></td></tr>
        <tr> <td><p style="font-size:15px">@Html.ActionLink("Back","Restaurants")</p></td></tr>

        
