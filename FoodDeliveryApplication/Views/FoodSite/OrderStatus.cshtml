          </div>
        </div>
   }else if(@i.Status=="Accepted"){
       <div class="flex-0">
       <div class="flexing">
            <ol class="progtrckr" data-progtrckr-steps="5">
                <li class="progtrckr-done">Order Placed</li>
                <li class="progtrckr-done">Preparing Food</li>
                <li class="progtrckr-todo">On the Way</li>
            
                <li class="progtrckr-todo">Delivered</li>
            </ol>
        </div>
        </div>

   }else if(@i.Status=="Prepared"){
       <div class="flex-0">
       <div class="flexing">
            <ol class="progtrckr" data-progtrckr-steps="5">
                <li class="progtrckr-done">Order Placed</li>
                <li class="progtrckr-done">Preparing Food</li>
                <li class="progtrckr-done">On the Way</li>
            
                <li class="progtrckr-todo">Delivered</li>
            </ol>
        </div>
        </div>

   }else if (@i.Status=="Delivered"){
       <div class="flex-0">
       <div class="flexing">
            <ol class="progtrckr" data-progtrckr-steps="5">
                <li class="progtrckr-done">Order Placed</li>
                <li class="progtrckr-done">Preparing Food</li>
                <li class="progtrckr-done">On the Way</li>
            
                <li class="progtrckr-done">Delivered</li>
            </ol>
        </div>
                        </div>

                    }else if (@i.Status == "Cancelled")
                    {
                        <div class="flex-0">
       <div class="flexing">
            <ol class="progtrckr" data-progtrckr-steps="5">
                <li class="progtrckr-done">Order Placed</li>
               <li class="progtrckr-cancel">Preparing Food</li>
                <li class="progtrckr-cancel">On the Way</li>
            
                <li class="progtrckr-cancel">Cancelled</li>
            </ol>
        </div>
                        </div>
                    }else if (@i.Status == "Delivered")
                    {
                        <div class="flex-0">
       <div class="flexing">
            <ol class="progtrckr" data-progtrckr-steps="5">
                <li class="progtrckr-done">Order Placed</li>
               <li class="progtrckr-done">Preparing Food</li>
                <li class="progtrckr-done">On the Way</li>
            
                <li class="progtrckr-done">Delivered</li>
            </ol>
        </div>
                        </div>
                    }

                                                    <div class="flex1 mt-2">
                                                        <div id="left">
                                                            <p style="color:#7e808c;font-size:12px;font-weight:bold;">INVOICE NO</p>
                                                            <p style="font-size:20px">@i.InVoiceNo</p>
                                                        </div>
                                                        <div id="right">
                                                            @if(@i.Status=="Cancelled"){
                                <p style="color:#7e808c;font-size:12px;font-weight:bold;">CANCELLED TIME</p>
                            }else if(@i.Status=="Delivered"){
                                <p style="color:#7e808c;font-size:12px;font-weight:bold;">DELIVERED TIME</p>
                            }else{
                                <p style="color:#7e808c;font-size:12px;font-weight:bold;">ORDERED TIME</p>
                            }
                            
                                                            <p style="font-size:20px">@i.OrderTime</p>
                                                        </div>
               
                                                    </div>

                
                                        }
                                        <br/>
           
                                        <div class="flex2">
                                            <div id="left">
                                                @if (tempInvoiceNo != @i.InVoiceNo)
                                                {
                                                    <p style="color:#7e808c;font-size:12px;font-weight:bold">FOOD ITEM</p>
                        
                                                }
                                                <p style="font-size:20px">@i.FoodItem</p>
                                            </div>
                                            <div id="center">
                                                @if (tempInvoiceNo != @i.InVoiceNo)
                                                {
                        
                                                <p style="color:#7e808c;font-size:12px;font-weight:bold">QUANTITY</p>
                                                }
                                                <p style="font-size:20px">@i.Quantity</p>
                                            </div>
                                            <div id="right">
                                                @if (tempInvoiceNo != @i.InVoiceNo)
                                                {
                                                    <p style="color:#7e808c;font-size:12px;font-weight:bold">PRICE</p>
                                                }
                        
                                                <p style="font-size:20px">@i.Price</p>
                                            </div>
                                        </div>
                                        @{
